@model  MFramework.Services.IdentityAuth.Models.RoleDetailsViewModel

<div class="modal fade" id="modal_detailsrole" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Details Role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row mb-2">
                    <div class="col-md-10">
                        <div class="small"><b>Role Title : </b>@Model.Role.Title</div>
                        <div class="small"><b>Role Description : </b>@Model.Role.Description</div>
                    </div>
                    <div class="col-md-2 text-right">
                        @Ajax.ActionLink("Refresh", "DetailsRoleData", "Admin", new { id = Model.Role.Id }, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, LoadingElementDuration = 300, LoadingElementId = "loading", UpdateTargetId = "section_roledetailsdata" }, new { @class = "btn btn-primary", id = "btn_refreshroledetailsdata" })
                    </div>
                </div>
                <div class="row" id="section_roledetailsdata">
                    @*Ajax Loading : _RoleDetailsDataPartial*@
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    $("#modal_detailsrole").modal("show");
    $("#modal_detailsrole").on("hidden.bs.modal", function (e) {
        $(this).parent().empty();
    });

    $("#btn_refreshroledetailsdata").click();
</script>