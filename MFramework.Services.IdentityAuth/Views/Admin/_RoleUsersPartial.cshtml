@model  MFramework.Services.IdentityAuth.Models.RoleDetailsViewModel

@if (Model != null && Model.RoleApplicationUsers != null && Model.RoleApplicationUsers.Count > 0)
{
    <ul class="list-group pr-1">
        @foreach (var item in Model.RoleApplicationUsers)
        {
            <li class="list-group-item mb-1">
                <h6>@item.UserName</h6>
                <div><small class="mb-0">@item.Email</small></div>
            </li>
        }
    </ul>
}
else
{
    <p class="text-center"><small>There is no any user that has @Model.Role.Title role.</small></p>
}