@model  MFramework.Services.IdentityAuth.Models.SecurityGroupCreateViewModel

@using (Ajax.BeginForm("CreateSecurityGroup", "Admin", null, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = "form_createsecuritygroup", LoadingElementDuration = 300, LoadingElementId = "loading" }, new { id = "form_createsecuritygroup" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        <div class="offset-md-2 col-md-8">
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-4 col-form-label font-weight-bold" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-4 col-form-label font-weight-bold" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
    </div>
}
