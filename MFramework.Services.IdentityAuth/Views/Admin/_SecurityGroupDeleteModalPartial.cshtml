@model  MFramework.Services.IdentityAuth.Models.ApplicationSecurityGroup

<div class="modal fade" id="modal_deletesecuritygroup" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Security Group</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <p>Are you want to sure delete this?</p>
                    </div>
                    <div class="col-md-12">
                        <dl class="row">
                            <dt class="col-md-4">
                                Name :
                            </dt>
                            <dd class="col-md-8">
                                @Model.Name
                            </dd>
                            <dt class="col-md-4">
                                Description :
                            </dt>
                            <dd class="col-md-8">
                                @Model.Description
                            </dd>
                        </dl>
                    </div>
                    @using (Ajax.BeginForm("DeleteSecurityGroup", "Admin", new { id = Model.Id }, new AjaxOptions { HttpMethod = "POST", LoadingElementDuration = 300, LoadingElementId = "loading" }, new { id= "form_deletesecuritygroup" }))
                    {
                        @Html.AntiForgeryToken()
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-danger" form="form_deletesecuritygroup"><i class="fa fa-trash-o"></i> Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    $("#modal_deletesecuritygroup").modal("show");
    $("#modal_deletesecuritygroup").on("hidden.bs.modal", function (e) {
        $(this).parent().empty();
    });

    function deletesecuritygroup_success() {
        $('#modal_deletesecuritygroup').modal('hide');
        refresh_securitygroup_table();
    }
</script>